{% extends 'base.html.twig' %}

{% block title %}Accueil CRUD{% endblock %}

{% block body %}
    <h1>Liste des véhicules</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Identifiant</th>
                <th>Capacité</th>
                <th>Prix</th>
                <th>Kilometrage</th>
                <th>Immatriculation</th>
                <th>Année du véhicule</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vehicle in vehicles %}
            <tr>
                <td>{{ vehicle.id }}</td>
                <td>{{ vehicle.capacity }}</td>
                <td>{{ vehicle.price }}</td>
                <td>{{ vehicle.numberKilometers }}</td>
                <td>{{ vehicle.numberPlate }}</td>
                <td>{{ vehicle.yearOfVehicle }}</td>
                <td>{{ vehicle.picturePath }}</td>
                <td>
                    <a href="{{ path('app_vehicle_crud_show', {'id': vehicle.id}) }}">Détails</a>
                    <a href="{{ path('app_vehicle_crud_edit', {'id': vehicle.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucune donnée trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_vehicle_crud_new') }}">Ajouter</a>
{% endblock %}
