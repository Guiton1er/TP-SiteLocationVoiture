{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class="d-flex flex-column mx-auto m-4 gap-2">
        {% for vehicle in vehicles %}
                <div class="d-flex flex-row justify-content-center gap-2 p-2 mx-auto bg-dark text-white rounded">
                    <img src={{ vehicle.picturePath }} style="height: 180px; width: auto">
                    <div class="d-flex flex-column">
                        <p>{{ vehicle.model.brand.name }} {{ vehicle.model.name }}</p>
                        <p>Type : {{ vehicle.type.name }}</p>
                        <p>Capacité : {{ vehicle.capacity }} passagers</p>
                        <p>Tarif de location : {{ vehicle.price }}€ par jour</p>
                    </div>
                </div>
        {% endfor %}
    </div>
{% endblock %}
